@model IEnumerable<RoleViewModel> ;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<form style="display:flex;justify-content:center;align-items:center">
    <input style=" height:2rem; width:30% ; " type="search" placeholder="searchByName" name="searchName" />
    <input style="color:white;text-align:center;margin-left:10px;height:2rem ;border:none ;background-color:dodgerblue" type="submit" value="Search" />
</form>
<a class="btn btn-info" asp-controller="Role" asp-action="Create">Add Employee</a>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(ele => ele.Id)</th>
                <th>@Html.DisplayNameFor(ele => ele.Name)</th>
                

                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                 
                    <partial name="_DetailsPartial" model="@role.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <center><div class="mt-5 alert-danger">No Roles yet!</div></center>
}

