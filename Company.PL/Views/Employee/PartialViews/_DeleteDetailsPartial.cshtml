@model EmployeeViewModel
<input hidden asp-for="@Model.ImageName" readonly />
<div class="form-group">
    <label asp-for="@Model.name">Name</label>
    <input type="text" asp-for="@Model.name" class="form-control" readonly />
    <span asp-validation-for="@Model.name" class="bg-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.address">Address</label>
    <input type="text" asp-for="@Model.address" class="form-control" readonly />
    <span asp-validation-for="@Model.address" class="bg-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.phone">Phone</label>
    <input type="tel" asp-for="@Model.phone" class="form-control" readonly />
    <span asp-validation-for="@Model.phone" class="bg-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.hirringDate">HirringDate</label>
    <input type="date" asp-for="@Model.hirringDate" class="form-control" readonly />
    <span asp-validation-for="@Model.hirringDate" class="bg-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.salary">Salary</label>
    <input type="text" asp-for="@Model.salary" class="form-control" readonly />
    <span asp-validation-for="@Model.salary" class="bg-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.age">Age</label>
    <input type="number" asp-for="@Model.age" class="form-control" readonly />
    <span asp-validation-for="@Model.age" class="bg-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.email">Email</label>
    <input type="email" asp-for="@Model.email" class="form-control" readonly />
    <span asp-validation-for="@Model.email" class="bg-danger"></span>
</div>