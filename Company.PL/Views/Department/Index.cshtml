
@model IEnumerable<DepartmentViewModel>

@{
    ViewData["Title"] = "Index";
}
<h1>All Departments</h1>
@if (TempData["message"] is not null)
{
    <div class="alert alert-success">@TempData["message"]</div>
}
<br />
<br />
<a class="btn btn-info" asp-controller="Department" asp-action="Create">Add Department</a>
@if(Model.Count()>0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D=>D.name)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var D in Model)
            {
                <tr>
                <td>@D.Code</td>
                <td>@D.name</td>
                
                <partial name="_DetailsPartial" model="@D.id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <center><div class="mt-5 alert-danger">No Departments yet!</div></center>
}

