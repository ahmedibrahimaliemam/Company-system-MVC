@model LoginViewModel ;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthSecurity.cshtml";
}



<div  class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" ></div>
		<form asp-action="Login">
			
			
			<input class="text email" type="email" asp-for="@Model.Email" placeholder="Email" required="">
			<input class="text" type="password" asp-for="@Model.Password" placeholder="Password" required="">
			
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="@Model.RememberMe" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>
		<a asp-action="SendEmail"> ForgotPassword!</a>
	</div>
</div>
@section scriptValidationSection {
	<partial name="_ValidationScriptsPartial" />

}


